{
  "rust-analyzer": {
    "checkOnSave": {
      "allTargets": false
    },
    "procMacro": {
      "enable": false
    },
    "inlayHints": {
      "typeHints": {
        "enable": true
      },
      "chainingHints": {
        "enable": true
      }
    },
    "diagnostics": {
      "disabled": ["unresolved-proc-macro", "inactive-code"]
    },
    "signatureInfo": {
      "detail": "full",
      "documentation": {
        "enable": true
      }
    },
    "completion": {
      "autoimport": {
        "enable": true
      }
    },
    "typing":  {
      "autoClosingAngleBrackets": {
        "enable": true
      }
    }
  }
}
