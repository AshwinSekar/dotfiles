#
# bspwm hotkeys
#

# quit bspwm and other scripts
super + alt + Escape
    pkill -x float_bar; pkill -x panel; pkill -x network; pkill -x workspaces; bspc quit

# close and kill
super + {_,shift + }w
    bspc node -c

# alternate between tiled and monocle layout
super + m
    bspc desktop -l next

super + b
    bspc node --balance

super + {t, shift + t,s,f}
    bspc node -t ~{tiled,pseudo_tiled,floating,fullscreen}

super + {grave,Tab}
    bspc {node,desktop} -f last

super + apostrophe
    bspc node -s last

super + y
    bspc node -w last.manual

super + m
    bspc node -s biggest

super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

super + {_,shift + }c
    bspc node -f {next,prev}

super + {comma,period}
    bspc desktop -C {backward,forward}

super + bracket{left,right}
    bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

super + ctrl + {_,shift + }space
    bspc {node -p cancel,desktop -c}

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

super + ctrl + {1-9}
    bspc node -r 0.{1-9}

super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} ^{1-9,10}

super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i

super + p
    bspc node -t power

#
# wm independent hotkeys
#

super + Return
    urxvt

super + shift + Return 
    urxvt -e bash -c "sshpass -f .config/sxhkd/pass ssh andrew"

super + space
    launcher 2> ~/.sxhkd.log

super + g
    chromium --force-device-scale-factor=1.5

super + z
    thunar

# Lock screen
super + q
    cd ~/.scripts && lock

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

# Sound
XF86AudioMute
    amixer -q sset 'Master' toggle

XF86AudioLowerVolume
    amixer -q sset 'Master' 2%-

XF86AudioRaiseVolume
    amixer -q sset 'Master' 2%+

# button6
#     amixer -q sset 'Master' 2%+
#     
# button7
#     amixer -q sset 'Master' 2%-
    
# Brightness
XF86MonBrightnessUp
    xbacklight -inc 5

XF86MonBrightnessDown
    xbacklight -dec 5


# Screen rotate
super + F15
    xrandr --output DVI-I-1 --rotate normal
F15
    xrandr --output DVI-I-1 --rotate right
